{
  "compilerOptions": {
    "outDir": "./build",
    "declaration": true,
    "sourceMap": true,
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.css"
  ],
  "exclude": [
    "node_modules"
  ]
}
