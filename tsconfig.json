{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@react-motion-router/*": ["./packages/*/build"]
        },
        "composite": true,
        "declaration": true,
        "sourceMap": true,
        "target": "ES2016",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react"
    },
    "exclude": [
        "node_modules",
        "example",
        "build"
    ]
}
  