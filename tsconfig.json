{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@react-motion-router/*": ["./packages/*/build"],
            "web-animations-extension": ["./packages/web-animations-extension/build"]
        },
        "declaration": true,
        "sourceMap": true,
        "target": "ES2022",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true,
        "tsBuildInfoFile": "./.tsbuildinfo",
    },
    "exclude": [
        "node_modules",
        "build"
    ]
}
  